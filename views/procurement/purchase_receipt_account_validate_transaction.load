<script>

    $('#discount').change(function(){
        var _addcomputed = 0

        var _lan = $('#no_table_landed_cost').val();
        var _cus = $('#no_table_custom_duty_charges').val();
        var _oth = $('#no_table_other_charges').val();

        var _ton = $('#total_net_amount').val();
        var _dis = $('#discount').val();        
        var _for = $('#foreign_total_amount').val();
        var _loc = $('#local_total_amount').val();

        _for = (parseFloat(_ton) * (100 - parseInt(_dis))) / 100
        _loc = parseFloat(_for) * parseFloat(_lan)
        _addcomputed = parseFloat(_loc) + parseFloat(_oth) + parseFloat(_cus) 
        $('#foreign_total_amount').val(Number(_for.toFixed(6)).toLocaleString());          
        $('#local_total_amount').val(Number(_addcomputed.toFixed(6)).toLocaleString());   
    });

    function compute(i, q, u, p, r){
        console.log('compute');
        var a = 0;
        var _gt = 0;
        var _lnd = $('#no_table_landed_cost').val();
        var _dis = $('#discount').val();
        var _p = parseInt(q) * parseInt(u) + parseInt(p)
        var _c = parseInt(r) / parseInt(u)
        var _a = _p * parseFloat(_c);
        _gt = _gt + _a
        _discount = (parseFloat(_gt) * (100 - parseInt(_dis))) / 100
        _loc = (parseFloat(_discount) * parseFloat(_lnd))
        $('#total_net_amount').val(Number(_gt.toFixed(6)).toLocaleString());  
        $('#foreign_total_amount').val(Number(_discount.toFixed(6)).toLocaleString());  
        $('#local_total_amount').val(Number(_loc.toFixed(6)).toLocaleString());  
    }

    function computed(i, q, u, p, r){           
        var _lnd = $('#no_table_landed_cost').val();
        var _otc = $('#no_table_other_charges').val();
        var _cus = $('#no_table_custom_duty_charges').val();
        var _gt = 0;
        var _loc = 0;
        var _discount = 0;
        var _dis = $('#discount').val();
        var _p = 0;
        var _c = 0;
        var _a = 0;
        var inputs = document.getElementsByName('total_amount');             
        console.log(i);
        for(var x = 0; x < i.length; x++){
            if (parseInt(u[x]) <= parseInt(p[x])){
                // console.log('error');
                errAlert();
            } 

            var _p = parseInt(q[x]) * parseInt(u[x]) + parseInt(p[x])
            var _c = parseFloat(r[x]) / parseInt(u[x])
            var _a = _p * parseFloat(_c)
            inputs[x].value = _a.toFixed(3);
            _gt = _gt + _a
            _discount = (parseFloat(_gt) * (100 - parseInt(_dis))) / 100
            _loc = (parseFloat(_discount) * parseFloat(_lnd)) // + (parseFloat(_otc) + parseFloat(_cus))
            
        }        
        $('#total_net_amount').val(Number(_gt.toFixed(6)).toLocaleString());  
        $('#foreign_total_amount').val(Number(_discount.toFixed(6)).toLocaleString());  
        $('#local_total_amount').val(Number(_loc.toFixed(6)).toLocaleString());  
        
                          
    }

    function errAlert(){
        bootbox.alert({
            size: "small",
            message: "Pieces value already exceed. \n Reset to zero.",
            callback: function(){ 
                $('.pieces').val(0);
                // location.reload();
            }
        });        
    }





</script>